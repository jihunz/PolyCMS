<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="article">
	<select id="list" resultType="Article">
		SELECT *
		FROM board_${boardId}
	</select>
	
	<update id="viewCount">
		UPDATE board_${boardId}
		SET view_count=VIEW_${articleId}_SEQ.NEXTVAL
		WHERE article_id=#{articleId}
	</update>
	
	<insert id="add">
		INSERT INTO board_${boardId}
		(article_id, subject, contents, reg_date)
		VALUES(BOARD_${boardId}_SEQ.nextval, #{subject}, #{contents}, sysdate)
		
		<selectKey resultType="Long" keyProperty="articleId" order="AFTER">
			SELECT BOARD_${boardId}_SEQ.currval	FROM DUAL
		</selectKey>
	</insert>
	
	<update id="create_view_seq">
		CREATE SEQUENCE VIEW_${articeId}_SEQ
	</update>
	
	<update id="create_good_seq">
		CREATE SEQUENCE GOOD_${articeId}_SEQ
	</update>
	
	<update id="create_bad_seq">
		CREATE SEQUENCE BAD_${articeId}_SEQ
	</update>
	
	<select id="item" resultType="Article">
		SELECT *
		FROM board_${boardId}
		WHERE article_id=#{articleId}
	</select>
	
	<update id="update">
		UPDATE board_${boardId}
		SET subject=#{subject}, contents=#{contents}, edit_date=sysdate
		WHERE article_id=#{articleId}
	</update>
	
	<delete id="delete">
		DELETE FROM board_${boardId}
		WHERE article_id=#{articleId}
	</delete>
	
	<update id="delete_view_seq">
		DROP SEQUENCE VIEW_${articleId}_SEQ
	</update>
	
	<update id="delete_good_seq">
		DROP SEQUENCE GOOD_${articleId}_SEQ
	</update>
	
	<update id="delete_bad_seq">
		DROP SEQUENCE BAD_${articleId}_SEQ
	</update>
	
</mapper>